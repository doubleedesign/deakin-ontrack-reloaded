{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"composite": true,
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"typechecker": {
		"types": [
			"AssignmentGroup", "AssignmentCluster"
		],
		"locations": ["./src/types.ts"]
	},
	"include": ["**/*.ts", "**/*.js", "**/*.json"],
	"exclude": [
		"node_modules",
		"coverage",
		".run", "dist",
		"**/*.test.ts",
		"jest.config.js",
		"jest.setup.ts",
		"jest.teardown.ts",
		"jest.globalMocks.ts"
	]
}
